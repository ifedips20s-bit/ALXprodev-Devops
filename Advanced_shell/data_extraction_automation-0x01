#!/bin/bash

JSON_FILE="data.json"

# Extract Pokémon name
name=$(jq -r '.name' "$JSON_FILE" | sed 's/.*/\u&/')

# Extract height (decimeters → meters)
height=$(jq -r '.height' "$JSON_FILE")
formatted_height=$(echo "$height" | awk '{printf "%.1f", $1/10}')

# Extract weight (hectograms → kilograms)
weight=$(jq -r '.weight' "$JSON_FILE")
formatted_weight=$(echo "$weight" | awk '{printf "%.1f", $1/10}')

# Extract type(s)
type=$(jq -r '.types | sort_by(.slot) | .[].type.name' "$JSON_FILE" | sed 's/.*/\u&/' | paste -sd "," -)

# Final output
echo "$name is of type $type, weighs ${formatted_weight}kg, and is ${formatted_height}m tall."
