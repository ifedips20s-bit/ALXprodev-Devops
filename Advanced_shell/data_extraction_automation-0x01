#!/bin/bash

# File containing API response
JSON_FILE="data.json"

# Extract Pok√©mon name
NAME=$(jq -r '.name' "$JSON_FILE" | sed 's/.*/\u&/')  # Capitalize first letter

# Extract height (API gives height in decimeters, convert to meters)
HEIGHT=$(jq -r '.height' "$JSON_FILE" | awk '{printf "%.1f", $1/10}')

# Extract weight (API gives weight in hectograms, convert to kg)
WEIGHT=$(jq -r '.weight' "$JSON_FILE" | awk '{printf "%d", $1/10}')

# Extract type(s) - if multiple types, join with comma
TYPE=$(jq -r '.types | sort_by(.slot) | .[].type.name' "$JSON_FILE" | sed 's/.*/\u&/' | paste -sd "," -)

# Print formatted output
echo "$NAME is of type $TYPE, weighs ${WEIGHT}kg, and is ${HEIGHT}m tall."
