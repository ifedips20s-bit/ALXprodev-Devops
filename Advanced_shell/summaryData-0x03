#!/bin/bash

# Directory containing PokÃ©mon JSON files
INPUT_DIR="pokemon_data"
# Output CSV file
CSV_FILE="pokemon_report.csv"

# Header for CSV
echo "Name,Height (m),Weight (kg)" > "$CSV_FILE"

# Loop through each JSON file and extract data
for FILE in "$INPUT_DIR"/*.json; do
    NAME=$(jq -r '.name' "$FILE" | sed 's/.*/\u&/')         # Capitalize first letter
    HEIGHT=$(jq -r '.height' "$FILE" | awk '{printf "%.1f", $1/10}')  # Convert dm to m
    WEIGHT=$(jq -r '.weight' "$FILE" | awk '{printf "%.1f", $1/10}')  # Convert hg to kg
    echo "$NAME,$HEIGHT,$WEIGHT" >> "$CSV_FILE"
done

echo "CSV Report generated at: $CSV_FILE"
echo ""

# Calculate average height and weight using awk
awk -F',' 'NR>1 {h+=$2; w+=$3; count++} END {printf "Average Height: %.2f m\nAverage Weight: %.2f kg\n", h/count, w/count}' "$CSV_FILE"
